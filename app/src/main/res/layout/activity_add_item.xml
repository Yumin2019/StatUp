            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_color_text_view2">

            <ImageView
                android:id="@+id/button_color_1"
