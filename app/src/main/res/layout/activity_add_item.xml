            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/line_horizontal_050" />

        <TextView
            android:id="@+id/description_text_view"
            style="@style/text_normal_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_margin"
            android:text="@string/str_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/line_vertical_035"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/line_horizontal_080" />

        <EditText
            android:id="@+id/initial_level_edit_text"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="@drawable/view_border_style"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="5"
            app:layout_constraintBottom_toTopOf="@+id/final_level_edit_text"
            app:layout_constraintStart_toStartOf="@+id/line_vertical_035"
            app:layout_constraintTop_toTopOf="@+id/line_horizontal_050"
            app:layout_constraintWidth_max="@dimen/edit_text_max_width" />

        <TextView
            android:id="@+id/title_text_view"
            style="@style/text_normal_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_stat_name"
            app:layout_constraintBottom_toTopOf="@+id/line_horizontal_030"
            app:layout_constraintEnd_toStartOf="@+id/line_vertical_035"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/line_horizontal_010" />

        <Spinner
