                app:layout_constraintEnd_toStartOf="@+id/button_color_24"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/button_color_22" />

            <ImageView
                android:id="@+id/button_color_24"
