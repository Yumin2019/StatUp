            app:layout_constraintBottom_toTopOf="@+id/line_horizontal_030"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/line_vertical_035"
            app:layout_constraintTop_toTopOf="@+id/line_horizontal_010"
